# True for development, False for production
DEBUG=True

SECRET_KEY=<STRONG_KEY_HERE>

# Retell configuration for web calls
# Public chat widget is configured in base.html; for direct web calls use these:
# RETELL_API_KEY=your_retell_api_key
# RETELL_AGENT_ID=your_agent_id
# RETELL_AGENT_VERSION=1
# Prefer a dedicated agent id for web calls
# RETELL_CALL_AGENT_ID=your_web_call_agent_id
# Optional override (defaults to official):
# RETELL_CREATE_WEB_CALL_URL=https://api.retellai.com/v2/create-web-call
# Optional list endpoints (override if Retell changes)
# RETELL_LIST_CONVERSATIONS_URL=https://api.retellai.com/v2/conversations
# RETELL_LIST_CALLS_URL=https://api.retellai.com/v2/calls
# For local development without hitting provider:
# RETELL_MOCK=True

# Secret token to protect the Retell sync webhook URL
# RETELL_SYNC_TOKEN=sync_very_long_random_token_here

# Optional: Separate token for simple webhook (/api/callback) Authorization: Bearer <RETELL_WEBHOOK_TOKEN>
# Defaults to RETELL_SYNC_TOKEN when not set
# RETELL_WEBHOOK_TOKEN=wh_very_long_random_token_here

